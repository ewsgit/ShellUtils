{
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/root"
  ],
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "lib": [
      "esnext"
    ],
    "module": "esnext",
    "watch": true,
    "noEmit": false,
    "target": "ESNext",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
